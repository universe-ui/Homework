<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="32dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_1"
            style="@style/NumberButtonStyle"
            android:text="1" />

        <Button
            android:id="@+id/btn_2"
            style="@style/NumberButtonStyle"
            android:text="2" />

        <Button
            android:id="@+id/btn_3"
            style="@style/NumberButtonStyle"
            android:text="3" />
    </LinearLayout>

    <!-- 第二行：4,5,6 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_4"
            style="@style/NumberButtonStyle"
            android:text="4" />

        <Button
            android:id="@+id/btn_5"
            style="@style/NumberButtonStyle"
            android:text="5" />

        <Button
            android:id="@+id/btn_6"
            style="@style/NumberButtonStyle"
            android:text="6" />
    </LinearLayout>

    <!-- 第三行：7,8,9 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_7"
            style="@style/NumberButtonStyle"
            android:text="7" />

        <Button
            android:id="@+id/btn_8"
            style="@style/NumberButtonStyle"
            android:text="8" />

        <Button
            android:id="@+id/btn_9"
            style="@style/NumberButtonStyle"
            android:text="9" />
    </LinearLayout>

    <!-- 第四行：空,0,删除 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_0"
            style="@style/NumberButtonStyle"
            android:text="0" />

        <ImageButton
            android:id="@+id/btn_delete"
            style="@style/NumberButtonStyle"
            android:src="@drawable/ic_backspace" />
    </LinearLayout>

</LinearLayout>